{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "outDir": "dist/"
  },
  "include": [
    "src/**/*"
  ]
}